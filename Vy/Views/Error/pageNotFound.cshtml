
@{
    ViewBag.Title = "pageNotFound";
}

<div class="container">
    <div class="row mb-5">
        <div class="col-md-10 mx-auto">
            <div class="text-center bg-white p-5 mt-5 rounded shadow">
                <h1>
                    Something went wrong!
                </h1>
                <h2>
                    404 - Not Found
                </h2>
                <div class="mt-3 mb-3">
                    <p>
                        Requested page not found! The page you are looking for was moved, removed or doesn't exist.
                    </p>
                </div>

                <div class="mt-3">
                    @Html.ActionLink("Back to Homepage", "Index", "Home", new { }, new { @class = "btn btn-dark" })
                </div>
            </div>
        </div>
    </div>
</div>
